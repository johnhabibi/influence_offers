source 'https://rubygems.org'

ruby '3.2.2'

# Rails
gem 'rails', '~> 7.1.1'

# Database
gem 'pg', '~> 1.1'

# Web Server
gem 'puma', '>= 5.0'

# Asset Pipeline
gem 'sprockets-rails'

# JSON APIs
gem 'jbuilder'

# Server Cache
gem 'bootsnap', require: false

# Development & Test
group :development, :test do
  gem 'debug', platforms: %i[mri windows]

  # Web Console
  gem 'web-console'
end

# Test
group :test do
  gem 'capybara'
  gem 'selenium-webdriver'
end

# Shakapacker
gem 'shakapacker', '~> 7.1'

# React-Rails
gem 'react-rails', '~> 3.1'

# Faker
gem 'faker', '~> 3.2'

# Password Hashing
gem 'bcrypt', '~> 3.1'

# Timezone Data
gem 'tzinfo-data', platforms: %i[windows jruby]

gem "bootstrap", "~> 5.3"
